<?xml version="1.0" encoding="utf-8"?><!--this view is loaded by the splash activity-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue"
    android:keepScreenOn="true">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/btn_liveworkout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_bordered_blue_button"
        android:gravity="center"
        android:text="Live Workout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />


    <me.grantland.widget.AutofitTextView
        android:id="@+id/btn_training_plan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/btn_liveworkout"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_bordered_blue_button"
        android:gravity="center"
        android:text="Training Plan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />
</RelativeLayout>