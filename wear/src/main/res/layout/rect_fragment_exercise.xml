<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_blue"
    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/layout_reps_weight_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="@dimen/_3sdp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <RelativeLayout
            android:id="@+id/rl_exercise_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_exercise_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/tv_serial_number"
                android:gravity="center"
                android:singleLine="true"
                android:text="Exercise"
                android:textColor="@color/green"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                autofit:minTextSize="@dimen/_11sdp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_serial_number"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:gravity="right|bottom"
                android:maxLines="1"
                android:text="x/n"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                autofit:minTextSize="@dimen/_11sdp" />


            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@id/tv_exercise_name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="dd/mm/yyyy"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:visibility="gone"
                autofit:minTextSize="@dimen/_11sdp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/view_exercise_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="left|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_exercise_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_sets_count"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/error_image" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_sets_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_weight"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    autofit:minTextSize="@dimen/_11sdp" />


                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    autofit:minTextSize="@dimen/_11sdp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/view_timer_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_box="all">

                <LinearLayout
                    android:id="@+id/ll_reps_count"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.95"
                    android:background="@drawable/bordered_bg_grey"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"
                    android:visibility="gone">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_sets_count_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        autofit:minTextSize="@dimen/_11sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.95"
                    android:background="@drawable/bordered_bg_grey"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_weight_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        autofit:minTextSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.95"
                    android:background="@drawable/bordered_bg_grey"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/purple"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        autofit:minTextSize="@dimen/_11sdp" />
                </LinearLayout>


                <View
                    android:id="@+id/view_time_left"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/ll_time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:lineSpacingExtra="0dp"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:text="Time Left"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        autofit:minTextSize="@dimen/_7ssp" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_time_left"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:maxLines="1"
                        android:padding="1dp"
                        android:singleLine="true"
                        android:text="00:00:00"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        autofit:minTextSize="@dimen/_7ssp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.9"
                    app:layout_box="all">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_heart" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        autofit:minTextSize="@dimen/_11sdp" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_zone"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/green"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Zone 1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        autofit:minTextSize="@dimen/_11sdp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="Workout Time:"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        autofit:minTextSize="@dimen/_11sdp" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_elapsed_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="00:00:00"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_15ssp"
                        autofit:minTextSize="@dimen/_11sdp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|right"
                android:orientation="vertical"
                android:padding="@dimen/_2sdp"
                app:layout_box="all">

                <LinearLayout
                    android:id="@+id/ll_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:gravity="right|bottom">

                    <ImageView
                        android:id="@+id/iv_cancel"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/white_circle"
                        android:src="@drawable/ic_cross" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_play"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="2.5"
                    android:gravity="right|bottom">

                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/white_circle"
                        android:src="@drawable/ic_play" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:gravity="right|bottom"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_next"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/white_circle"
                        android:src="@drawable/ic_next" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.wearable.view.BoxInsetLayout>