<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_exercise_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="Exercise"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        autofit:layout_constraintBottom_toTopOf="@+id/view_timer_info"
        autofit:layout_constraintEnd_toStartOf="@+id/tv_serial_number"
        autofit:layout_constraintStart_toStartOf="parent"
        autofit:layout_constraintTop_toTopOf="parent"
        autofit:minTextSize="@dimen/_11sdp" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="right|bottom"
        android:maxLines="1"
        android:text="x/n"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        autofit:layout_constraintBottom_toTopOf="@+id/view_timer_info"
        autofit:layout_constraintEnd_toEndOf="parent"
        autofit:layout_constraintTop_toTopOf="@+id/tv_exercise_name"
        autofit:minTextSize="@dimen/_11sdp" />


    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="dd/mm/yyyy"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"
        autofit:layout_constraintBottom_toTopOf="@+id/view_timer_info"
        autofit:layout_constraintStart_toStartOf="parent"
        autofit:layout_constraintTop_toTopOf="@+id/tv_exercise_name"
        autofit:minTextSize="@dimen/_11sdp" />


    <LinearLayout
        android:id="@+id/view_exercise_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        autofit:layout_constraintBottom_toTopOf="@+id/guideline2"
        autofit:layout_constraintEnd_toEndOf="parent"
        autofit:layout_constraintStart_toStartOf="parent"
        autofit:layout_constraintTop_toBottomOf="@+id/guideline">

        <ImageView
            android:id="@+id/iv_exercise_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:scaleType="centerInside"
            android:src="@drawable/error_image" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_sets_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:maxLines="1"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            autofit:minTextSize="@dimen/_11sdp" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_weight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            autofit:minTextSize="@dimen/_11sdp" />

    </LinearLayout>

    <androidx.constraintlayout.ConstraintLayout
        android:id="@+id/view_timer_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        autofit:layout_constraintBottom_toTopOf="@+id/view_exercise_info"
        autofit:layout_constraintEnd_toEndOf="parent"
        autofit:layout_constraintStart_toStartOf="parent"
        autofit:layout_constraintTop_toBottomOf="@+id/tv_exercise_name">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_sets_count_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:visibility="gone"
            autofit:layout_constraintBottom_toTopOf="@+id/tv_elapsed_time"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintStart_toStartOf="@+id/guideline3"
            autofit:layout_constraintTop_toTopOf="parent"
            autofit:minTextSize="@dimen/_11sdp" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_weight_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            autofit:layout_constraintEnd_toStartOf="@+id/guideline3"
            autofit:layout_constraintHorizontal_bias="1.0"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toTopOf="parent"
            autofit:minTextSize="@dimen/_11sdp" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/autofitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true"
            android:text="Time Left"
            android:textColor="@color/red"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            autofit:layout_constraintBottom_toTopOf="@+id/imageView5"
            autofit:layout_constraintEnd_toEndOf="@+id/autofitTextView6"
            autofit:layout_constraintHorizontal_chainStyle="packed"
            autofit:layout_constraintTop_toBottomOf="@+id/autofitTextView6"
            autofit:minTextSize="@dimen/_7ssp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="1dp"
            android:singleLine="true"
            android:text="00:00:00"
            android:textColor="@color/red"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            autofit:layout_constraintBottom_toTopOf="@+id/tv_heart_rate"
            autofit:layout_constraintStart_toStartOf="@+id/tv_elapsed_time"
            autofit:layout_constraintTop_toBottomOf="@+id/tv_elapsed_time"
            autofit:minTextSize="@dimen/_7ssp" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_heart"
            autofit:layout_constraintBottom_toBottomOf="parent"
            autofit:layout_constraintEnd_toEndOf="@+id/autofitTextView"
            autofit:layout_constraintTop_toBottomOf="@+id/autofitTextView" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            autofit:layout_constraintBottom_toBottomOf="parent"
            autofit:layout_constraintStart_toStartOf="@+id/tv_time_left"
            autofit:layout_constraintTop_toBottomOf="@+id/tv_time_left"
            autofit:minTextSize="@dimen/_11sdp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/autofitTextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Time:"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            autofit:layout_constraintBottom_toTopOf="@+id/autofitTextView"
            autofit:layout_constraintEnd_toStartOf="@+id/guideline3"
            autofit:layout_constraintHorizontal_bias="0.513"
            autofit:layout_constraintHorizontal_chainStyle="packed"
            autofit:layout_constraintStart_toStartOf="parent"
            autofit:layout_constraintTop_toBottomOf="@+id/tv_weight_info"
            autofit:minTextSize="@dimen/_11sdp" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_elapsed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="00:00:00"
            android:textColor="@color/green"
            android:textSize="@dimen/_15ssp"
            autofit:layout_constraintBottom_toTopOf="@+id/tv_time_left"
            autofit:layout_constraintEnd_toEndOf="parent"
            autofit:layout_constraintHorizontal_bias="0.5"
            autofit:layout_constraintStart_toStartOf="@+id/guideline3"
            autofit:layout_constraintTop_toBottomOf="@+id/tv_weight_info"
            autofit:minTextSize="@dimen/_11sdp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            autofit:layout_constraintGuide_percent=".5" />
    </androidx.constraintlayout.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/white_circle"
        android:src="@drawable/ic_cross"
        autofit:layout_constraintBottom_toBottomOf="@+id/iv_play"
        autofit:layout_constraintEnd_toStartOf="@+id/iv_play"
        autofit:layout_constraintHorizontal_bias="0.5"
        autofit:layout_constraintStart_toStartOf="parent"
        autofit:layout_constraintTop_toTopOf="@+id/iv_play" />


    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/white_circle"
        android:src="@drawable/ic_play"
        autofit:layout_constraintBottom_toBottomOf="parent"
        autofit:layout_constraintEnd_toStartOf="@+id/iv_next"
        autofit:layout_constraintHorizontal_bias="0.5"
        autofit:layout_constraintStart_toEndOf="@+id/iv_cancel"
        autofit:layout_constraintTop_toBottomOf="@+id/view_exercise_info" />


    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/white_circle"
        android:src="@drawable/ic_next"
        android:visibility="gone"
        autofit:layout_constraintBottom_toBottomOf="@+id/iv_play"
        autofit:layout_constraintEnd_toEndOf="parent"
        autofit:layout_constraintHorizontal_bias="0.5"
        autofit:layout_constraintStart_toEndOf="@+id/iv_play"
        autofit:layout_constraintTop_toTopOf="@+id/iv_play" />

    <androidx.constraintlayout.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        autofit:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        autofit:layout_constraintGuide_percent=".8" />


</androidx.constraintlayout.ConstraintLayout>