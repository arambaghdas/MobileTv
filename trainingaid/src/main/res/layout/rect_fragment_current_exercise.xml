<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:keepScreenOn="true">


    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/belowImageDecoration"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_exercise_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_category_name"
                android:src="@drawable/error_image" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="EXERCISE NAME"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_exercise_name"
                android:layout_marginLeft="10dp"
                android:text="Exercise Name"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold" />


            <me.grantland.widget.AutofitTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Exercise"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:textStyle="bold" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_serial_number"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingRight="30dp"
                android:text="1/35"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />


    </RelativeLayout>


        <LinearLayout
            android:id="@+id/iconsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/belowImageDecoration"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/timeIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/belowImageDecoration"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:src="@drawable/clock"
                    android:tint="@color/grey" />

                <me.grantland.widget.AutofitTextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeIcon"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Total time"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_elapsed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeIcon"
                    android:layout_gravity="center_horizontal"
                    android:text="TIME"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_workouttimetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_elapsed_time"
                    android:layout_gravity="right"
                    android:gravity="center_horizontal"
                    android:text="TOTAL TIME"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/weightIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/belowImageDecoration"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:src="@drawable/weight2"
                    android:tint="@color/grey" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_weight"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_exercise_name"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@id/tv_sets_count"
                    android:gravity="center"
                    android:text="Weight: -"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/repisIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/belowImageDecoration"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:src="@drawable/reps2"
                    android:tint="@color/grey" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_sets_count"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_exercise_name"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Reps: 12"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <me.grantland.widget.AutofitTextView
            android:visibility="gone"
            android:id="@+id/zonesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/iconsLayout"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="EFFORT ZONE"
            android:textColor="@color/grey_text"
            android:textSize="12sp" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/effortZoneLayout"
            android:layout_below="@id/zonesHeader"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/effort1"
                android:layout_width="25dp"
                android:text="1"
                android:background="@drawable/effort_zone_square_green"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/effort2"
                android:layout_width="25dp"
                android:text="2"
                android:background="@drawable/effort_zone_square"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/effort3"
                android:layout_width="25dp"
                android:text="3"
                android:background="@drawable/effort_zone_square"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/effort4"
                android:layout_width="25dp"
                android:text="4"
                android:background="@drawable/effort_zone_square"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/effort5"
                android:layout_width="25dp"
                android:text="5"
                android:background="@drawable/effort_zone_square"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_nextController"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_above="@id/rl_cancelController"
            android:background="@drawable/custom_button1"
            android:layout_marginTop="10dp">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:text="NEXT SET"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_cancelController"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@drawable/custom_button_redlanding"
            android:layout_marginTop="10dp">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center"
                android:text="CANCEL SET"
                android:textColor="@color/background_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_skipController"
            android:layout_width="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_button3"
            android:layout_marginTop="10dp">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center"
                android:text="SKIP EXERCISE"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.wearable.view.BoxInsetLayout>