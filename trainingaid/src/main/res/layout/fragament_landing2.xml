    <ImageView
        android:id="@+id/tv_durationtv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/numOfExercises"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/clock"
        android:textColor="@color/grey_text"
        android:textSize="16sp" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_duration"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numOfExercises"
        android:layout_alignTop="@id/tv_durationtv"
        android:layout_toEndOf="@id/tv_durationtv"
        android:text="50 min"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <me.grantland.widget.AutofitTextView
        android:id="@+id/btn_change_workout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_start_workout"
        android:background="@drawable/custom_button_redlanding"
        android:elevation="3dp"
        android:gravity="center"
        android:text="Change"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        autofit:minTextSize="@dimen/_11sdp" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/btn_start_workout"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_button_red"
        android:elevation="3dp"
        android:gravity="center"
        android:text="Start workout"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        autofit:minTextSize="@dimen/_11sdp" />

    </RelativeLayout>

    <LinearLayout
    android:id="@+id/layoutInfoRv"
    android:layout_marginTop="20dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="@drawable/top_panel2"
    android:layout_below="@id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Exercis Name"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Reps/Times/Calls"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="Weight (kg)"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="Rest"
        android:layout_height="50dp" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/RvInfoLayout"
        android:orientation="horizontal"
        android:layout_below="@id/layoutInfoRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exercisesNameRv"
            android:layout_below="@id/layoutInfoRv"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


