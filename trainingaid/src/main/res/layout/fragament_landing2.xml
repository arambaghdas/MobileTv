    <RelativeLayout
        android:id="@+id/header"
        android:background="@drawable/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingBottom="20dp">


    <me.grantland.widget.AutofitTextView
        android:id="@+id/tv_workout_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="start"
        android:maxLines="2"
        android:text="XTrainer Shoulders and More"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        autofit:minTextSize="@dimen/_11sdp" />


    <ImageView
        android:id="@+id/exerciseicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_workout_name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_exercises"
        android:textColor="@color/grey_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/numOfExercises"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/tv_workout_name"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_alignTop="@id/exerciseicon"
        android:layout_toEndOf="@id/exerciseicon"
        android:layout_width="wrap_content"
        android:text="Exercises"
        android:layout_height="wrap_content" />


