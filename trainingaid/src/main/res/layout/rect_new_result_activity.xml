<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/workout_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="false"
            android:layout_marginTop="100dp"
            android:text="WELL DONE, YOU HAVE COMPLETED YOUR WORKOUT"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/iv_exercise_image"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/workout_completed"
            android:src="@drawable/achieve" />

</RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="340dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/workoutresultsiv"
            android:src="@drawable/clock"
            android:tint="@color/grey"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/totalwokouttimetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingRight="90dp"
            android:layout_below="@id/workoutresultsiv"
            android:singleLine="true"
            android:text="WORKOUT TIME: "
            android:textColor="@color/white"
            android:textSize="25dp" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/workoutresultsiv"
            android:layout_alignEnd="@id/totalwokouttimetv"
            android:paddingLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="2:54:12"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26dp" />


        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:text="Calories: TBA"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_total_time"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:src="@drawable/ic_heart" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@id/iv_heart"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/mintv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="min"
                    android:textColor="@color/grey_text"
                    android:textSize="14sp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_min_heart_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="60"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/maxtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="max"
                    android:textColor="@color/grey_text"
                    android:textSize="14sp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_max_heart_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/avgtv"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="avg"
                    android:textColor="@color/grey_text"
                    android:textSize="14sp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_avg_heart_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>




        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/top_panel2"
            android:backgroundTint="@color/top_panel_color"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/rateworkouttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Rate your workout:"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_stars"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rateworkouttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/easywhite" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/mediumwhite" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/hardcolor" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.wearable.view.BoxInsetLayout>