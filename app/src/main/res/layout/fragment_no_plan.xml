<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="@drawable/background"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/no_user"
            android:gravity="center"
            android:visibility="gone"
            android:text="User signed to another device"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:fontFamily="@font/mavenprobold"
            android:textColor="@color/grey_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/no_plan_text"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:fontFamily="@font/mavenprobold"
            android:textColor="@color/grey_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/webLink"
            android:text="Please check with your personal trainer or visit www.apitrain.com"
            android:gravity="center"
            android:fontFamily="@font/mavenprobold"
            android:textSize="18sp"
            android:layout_below="@id/no_plan_text"
            android:textColor="@color/grey_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>