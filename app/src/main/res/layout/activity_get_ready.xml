<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/pauseLayout"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backButton"
        android:src="@mipmap/ic_back"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:text="GET READY!"
        android:textColor="@color/grey_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/dividerHomeScreen"
        android:background="@color/grey_text"
        android:layout_width="match_parent"
        android:layout_marginTop="76dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="200dp"
                    android:layout_weight="1.2">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circularprogress"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progressbar_color="@color/activegreen"
                        app:cpb_background_progressbar_color="@color/grey_text">

                    </com.mikhaellopez.circularprogressbar.CircularProgressBar>

                    <ImageView
                        android:id="@+id/tv_pause"
                        android:layout_width="210dp"
                        android:scaleType="centerInside"
                        android:layout_height="210dp"
                        android:src="@drawable/pause"
                        android:text="Double tap to pause"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_go"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="GO!"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tvstartsin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:text="Starts In"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/tv_count_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvstartsin"
                        android:layout_centerHorizontal="true"
                        android:text="10"
                        android:textColor="@color/activegreen"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/heartRateLayout"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_count_down"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_heart"
                            android:layout_marginLeft="25dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/heart" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_heart_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginStart="5dp"
                            android:text="-"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutCancel"
                    android:layout_width="0dp"
                    android:gravity="top"
                    android:layout_marginTop="25dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rl_cancel"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_width="180dp"
                        android:background="@drawable/custom_button1"
                        android:backgroundTint="@color/gray"
                        android:layout_height="50dp">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="CANCEL"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="COUNTDOWN"
                            android:layout_below="@id/tv_cancel"
                            android:textColor="@color/grey_text"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <!--<com.mikhaellopez.circularprogressbar.CircularProgressBar-->
            <!--android:id="@+id/circularprogress"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_margin="10dp"-->
            <!--app:cpb_background_progressbar_width="7dp"-->
            <!--app:cpb_progressbar_color="@color/activegreen"-->
            <!--app:cpb_background_progressbar_color="@color/grey_text"/>-->


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_exercise_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_sets_count"
                    android:scaleType="fitXY"
                    android:src="@drawable/error_image" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_exercise_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:maxLines="2"
                    android:text="EXERCISE NAME"
                    android:background="@color/white"
                    android:textColor="@color/background_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="top"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="CATEGORY NAME"
                    android:textColor="@color/grey_text"
                    android:layout_below="@id/tv_exercise_name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingStart="10dp"
                    android:layout_below="@id/tv_exercise_name"
                    android:text="WEIGHT"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="@color/activegreen"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_sets_count"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingStart="10dp"
                    android:background="@color/white"
                    android:layout_toRightOf="@id/tv_weight"
                    android:layout_below="@id/tv_exercise_name"
                    android:gravity="center_vertical"
                    android:text="SETSCOUNT"
                    android:textColor="@color/activegreen"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>