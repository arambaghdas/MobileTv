<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="5dp"
    android:background="@drawable/custom_button"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/title_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mavenprobold"
        android:padding="3dp"
        android:text="Your Fitness Plan"
        android:textAllCaps="true"
        android:textColor="@color/grey_txt"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/fit_layout"
        android:layout_below="@id/title_plan"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/plan_image"
            android:padding="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/title_plan"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@mipmap/goal" />

        <TextView
            android:id="@+id/fitness_goal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/mavenprobold"
            android:gravity="center_vertical"
            android:text="Fitness Goal"
            android:textColor="@color/greyblack_text"
            android:textSize="14dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/training_layout"
        android:layout_below="@id/fit_layout"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/training_image"
            android:padding="3dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/plan_image"
            android:layout_marginTop="2dp"
            android:scaleType="centerInside"
            android:src="@mipmap/circle_plan" />


        <TextView
            android:id="@+id/training_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fitness_goal"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/food_image"
            android:fontFamily="@font/mavenprobold"
            android:layout_gravity="center_vertical"
            android:text="Training Plan"
            android:textColor="@color/greyblack_text"
            android:textSize="14dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/food_layout"
        android:layout_below="@id/training_layout"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/food_image"
            android:padding="3dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/training_image"
            android:scaleType="centerInside"
            android:src="@mipmap/food_plans" />

        <TextView
            android:id="@+id/food_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/training_plan"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/food_image"
            android:fontFamily="@font/mavenprobold"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="No fitness Goal"
            android:textColor="@color/greyblack_text"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/week_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_layout"
        android:fontFamily="@font/mavenprobold"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:text="achievements"
        android:textAllCaps="true"
        android:textColor="@color/grey_txt"
        android:textSize="14dp" />



    <LinearLayout
        android:id="@+id/cal_layout"
        android:layout_marginTop="5dp"
        android:layout_below="@id/week_results"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cal_burned_image"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:layout_below="@id/completed_workouts_image"
            android:src="@mipmap/kcal2" />

        <TextView
            android:id="@+id/calories_burned_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/mavenprobold"
            android:text="0"
            android:maxLines="2"
            android:textAllCaps="true"
            android:textColor="@color/greyblack_text"
            android:textSize="18dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/completed_workouts_layout"
        android:layout_marginTop="5dp"
        android:layout_below="@id/cal_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/completed_workouts_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:layout_below="@id/week_results"
            android:src="@mipmap/circle_weight"
            android:textColor="@color/greyblack_text" />

        <TextView
            android:id="@+id/workouts_completed_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mavenprobold"
            android:text="0"
            android:layout_gravity="center_vertical"
            android:textColor="@color/greyblack_text"
            android:textSize="14dp" />

    </LinearLayout>


</RelativeLayout>
