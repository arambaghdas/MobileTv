<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/firstViewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/pictureIv"
                    android:src="@drawable/offline_progress_image"
                    android:layout_width="match_parent"
                    android:layout_height="170dp" />


                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pictureIv"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="REMEMBER"
                    android:textColor="@color/background_blue"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title1"
                    android:layout_marginTop="2dp"
                    android:maxLines="6"
                    android:ellipsize="end"
                    android:text="please, connect to internet to get all your progress data"
                    android:fontFamily="@font/mavenprobold"
                    android:textColor="@color/background_blue"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_description"
                    android:visibility="gone"
                    android:text="more.."
                    android:fontFamily="@font/mavenprobold"
                    android:textColor="@color/background_blue" />

                <LinearLayout
                    android:id="@+id/userHeaderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/tv_more"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <ImageView
                        android:src="@drawable/appicon"
                        android:id="@+id/userImage"
                        android:layout_marginRight="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/mavenprobold"
                        android:gravity="center_vertical"
                        android:text="Your progress this week"
                        android:textColor="@color/background_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/rl_steps_progress"
                    android:layout_gravity="center"
                    android:layout_below="@id/userHeaderLayout"
                    android:layout_marginTop="20dp"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/steps_icon" />

                            <com.github.lzyzsd.circleprogress.DonutProgress
                                android:id="@+id/dp_steps"
                                android:rotation="-90"
                                android:layout_width="80dp"
                                android:layout_height="80dp" />

                            <TextView
                                android:id="@+id/tv_steps_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="45dp"
                                android:textColor="@color/teal_500"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/caloriesnew" />

                            <com.github.lzyzsd.circleprogress.DonutProgress
                                android:id="@+id/dp_calories"
                                android:rotation="-90"
                                android:layout_width="80dp"
                                android:layout_height="80dp" />

                            <TextView
                                android:id="@+id/tv_calories_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="45dp"
                                android:textColor="@color/teal_500"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:tint="@color/black"
                                android:rotation="-230"
                                android:src="@drawable/workoutsicon" />

                            <com.github.lzyzsd.circleprogress.DonutProgress
                                android:id="@+id/dp_fitness"
                                android:rotation="-90"
                                android:layout_width="80dp"
                                android:layout_height="80dp" />

                            <TextView
                                android:id="@+id/tv_fitness_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="45dp"
                                android:textColor="@color/teal_500"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/daysLayout"
                    android:layout_below="@id/rl_steps_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_monday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="MON"
                            android:textColor="@color/light_grey"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/line_monday"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/light_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_tuesday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="TUE"
                            android:textColor="@color/light_grey"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/line_tuesday"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/light_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_wednesday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="WED"
                            android:textColor="@color/light_grey"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/line_wednesday"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/light_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_thuesday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="THU"
                            android:textColor="@color/light_grey"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/line_thuesday"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/light_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_friday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="FRI"
                            android:textColor="@color/light_grey"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/line_friday"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/light_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_saturday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="SAT"
                            android:textColor="@color/light_grey"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/line_saturday"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/light_grey" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_sunday"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="SUN"
                            android:textColor="@color/light_grey"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/line_sunday"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/light_grey" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fitnessGoalLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstViewLayout">

                <ImageView
                    android:id="@+id/plan_imageView"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:background="@color/grey_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/fit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/plan_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/title_plan"
                        android:layout_marginTop="2dp"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/lose_weight" />

                    <TextView
                        android:id="@+id/fitness_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/mavenprobold"
                        android:gravity="center_vertical"
                        android:text="No fitness Goal"
                        android:textColor="@color/white"
                        android:textSize="18dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/training_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fit_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/training_image"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_below="@id/plan_image"
                        android:layout_marginTop="2dp"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:tint="@color/white"
                        android:src="@drawable/timer_icon" />


                    <TextView
                        android:id="@+id/training_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fitness_goal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="50dp"
                        android:layout_toRightOf="@id/food_image"
                        android:fontFamily="@font/mavenprobold"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minHeight="30dp"
                        android:text="Training Plan"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/food_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/training_layout"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/food_image"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_below="@id/training_image"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/food_plans" />

                    <TextView
                        android:id="@+id/food_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/training_plan"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/food_image"
                        android:fontFamily="@font/mavenprobold"
                        android:gravity="center_vertical"
                        android:text="No food plan"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fitnessGoalLayout">

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/noWorkoutData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:backgroundTint="@color/white">

                    <TextView
                        android:id="@+id/noWorkoutHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/activegreen"
                        android:text="Not working out today?"
                        android:textSize="24sp" />


                    <Button
                        android:id="@+id/btn_start_workout_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noWorkoutHeader"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button_style"
                        android:fontFamily="@font/mavenproblack"
                        android:text="@string/start_workout"
                        android:textColor="@color/white" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/haveWorkoutLayout"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/workoutName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="-2dp"
                        android:layout_toLeftOf="@id/stepsLayout"
                        android:layout_toRightOf="@id/workoutDataLayout"
                        android:fontFamily="@font/mavenprobold"
                        android:maxLines="2"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/stepsLayout"
                        android:layout_toLeftOf="@id/kcalLayout"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_width="70dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/stepsIcon"
                            android:src="@drawable/steps_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:id="@+id/stepsWorkoutTv"
                            android:text=""
                            android:gravity="center"
                            android:fontFamily="@font/mavenprobold"
                            android:textColor="@color/background_blue"
                            android:textSize="20sp"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/kcalLayout"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="70dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/caloriesIcon"
                            android:layout_toLeftOf="@id/caloriesWorkoutTv"
                            android:src="@drawable/caloriesnew"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:id="@+id/caloriesWorkoutTv"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/mavenprobold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/background_blue"
                            android:textSize="20sp" />

                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/workoutDataLayout"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/easywhite"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <ImageView
                            android:id="@+id/img2"
                            android:src="@drawable/mediumwhite"
                            android:layout_marginLeft="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <ImageView
                            android:id="@+id/img3"
                            android:src="@drawable/hardwhite"
                            android:layout_marginLeft="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/loadingView"
                android:visibility="gone"
                android:background="@color/background_blue"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">


                <ProgressBar
                    android:indeterminateTint="@color/activegreen"
                    android:layout_gravity="center_vertical"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"
                    android:text="Loading, Please Wait"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

