<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="200dp"
        tools:ignore="HardcodedText">


        <TextView
            android:id="@+id/splash_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/mavenprobold"
            android:text="@string/app_name_caps"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/splash_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_txt1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/mavenpromedium"
            android:text="@string/txt_smart_caps"
            android:textColor="@color/grey_text"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/splash_txt2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_flow"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mavenprobold"
            android:text="v3.0.2"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/splash_btn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/version"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-109dp"
            android:layout_toStartOf="@+id/version"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/mavenpromedium"
            android:text="LOG IN"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/splash_btn2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/version"
            android:layout_marginStart="-92dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/version"
            android:background="@drawable/custom_button2"
            android:fontFamily="@font/mavenpromedium"
            android:text="SIGN UP"
            android:textColor="@color/green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:fontFamily="@font/mavenprobold"
            android:text="www.apitrain.com"
            android:textColorLink="@color/green_grapgh"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/versionApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/website"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="80dp"
            android:autoLink="web"
            android:fontFamily="@font/mavenprobold"
            android:text="v1.0"
            android:textColorLink="@color/green_grapgh"
            android:textSize="15sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:src="@drawable/icon_white"
        tools:visibility="visible"
        />
</FrameLayout>