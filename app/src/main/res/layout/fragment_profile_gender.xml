<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    android:nestedScrollingEnabled="true"
    tools:context=".views.activities.LoginActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_blue"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.ThemeOverflow">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mavenproblack"
                android:text="@string/txt_profile_setup"
                android:textColor="@color/grey_text"
                android:textSize="@dimen/txt_title"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/dummyText1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/toolbar"
            android:gravity="center"
            android:background="@drawable/top_panel"
            android:text="@string/txt_questionaire_dummytext1"
            android:textColor="@color/grey_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/layoutDummy2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dummyText1"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dummyText2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="@string/txt_questionaire_dummytext2"
                android:textColor="@color/grey_text"
                android:textSize="18sp"
                android:textStyle="normal" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:tint="@color/grey_text"
                android:scaleType="centerInside"
                android:src="@drawable/gender" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/genderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutDummy2"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/genderMale"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/male" />

            <ImageView
                android:id="@+id/genderFemale"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/female" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/layoutDummy3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderLayout"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dummyText3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="@string/txt_questionaire_dummytext3"
                android:textColor="@color/grey_text"
                android:textSize="18sp"
                android:textStyle="normal" />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:tint="@color/grey_text"
                android:scaleType="centerInside"
                android:src="@drawable/dob" />

        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_dOb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/layoutDummy3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/dob_et_drawable"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/et_dOb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:editable="false"
                android:focusable="false"
                android:gravity="top|center"
                android:hint="D / M / Y"
                android:textColor="@color/background_blue"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/dummyText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_dOb"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/light_grey"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_Next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/green"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

</RelativeLayout>