<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:elevation="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="25dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/mavenprobold"
                    android:text="EXERCISE"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:rotation="180"
                    android:scaleType="centerInside"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:tint="@color/green_grapgh"
                    android:src="@mipmap/help_arrow"/>

                <CheckBox
                    android:id="@+id/checkbox_openclose"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="0"
                    android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:background="@drawable/top_panel"
            android:minHeight="150dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Just some random text for testing"
            android:visibility="gone"
            android:fontFamily="@font/mavenpromedium"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />


</LinearLayout>