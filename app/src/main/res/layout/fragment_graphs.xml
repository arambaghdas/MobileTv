<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:background="@color/dark_blue"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/dummyLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollViewDown"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/addGraphsLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/currentPlanLayout"
                android:padding="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <train.apitrainclient.views.custom.CurrentPlanView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/currentPlanView"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="320dp" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/noNetwkLayout"
        android:visibility="gone"
        android:background="@color/dark_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:text="Internet connection required"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>