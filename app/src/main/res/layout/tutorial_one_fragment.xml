<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background">


<RelativeLayout
    android:id="@+id/topPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_panel"
    android:paddingLeft="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="30dp">



        <ImageView
            android:id="@+id/dummyLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_white" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/welcome"
            android:text="Welcome to APITRAIN"
            android:textSize="20sp"
            app:minTextSize="15sp"
            android:layout_below="@id/dummyLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/mavenprobold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/dummyContent2"
            android:text="The smart way to train "
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="05dp"
            android:layout_below="@id/welcome"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/mavenproregular"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/topPanel"
      android:layout_marginTop="20dp"
      android:paddingBottom="30dp">

    <TextView
          android:id="@+id/dummyContent0"
          android:text="REVIEW"
          android:textSize="17sp"
          android:layout_marginTop="10dp"
          android:layout_centerHorizontal="true"
          android:fontFamily="@font/mavenprobold"
          android:textColor="@color/green_grapgh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/dummyContent0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:src="@drawable/review"
        android:alpha="0.2"
        android:scaleType="fitXY"
        android:background="@color/grey" />

      <LinearLayout
          android:id="@+id/dummyContent3"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_below="@id/dummyContent0"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="0dp"
          android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:layout_weight="1">

          <ImageView
              android:id="@+id/icontplan"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_centerHorizontal="true"
              android:paddingRight="180dp"
              android:scaleType="fitCenter"
              android:src="@drawable/stopwatchicon"
              android:tint="@color/white" />

          <ImageView
              android:id="@+id/iconfplan"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_centerHorizontal="true"
              android:paddingLeft="180dp"
              android:scaleType="fitCenter"
              android:src="@drawable/foodplansicon"
              android:tint="@color/white" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/icontplan"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/mavenprobold"
              android:paddingRight="180dp"
              android:text="Training Plans"
              android:textAlignment="center"
              android:textColor="@color/white"
              android:textSize="14sp" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/iconfplan"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/mavenprobold"
              android:paddingLeft="180dp"
              android:text="Food Plans"
              android:textAlignment="center"
              android:textColor="@color/white"
              android:textSize="14sp" />
        </RelativeLayout>

      </LinearLayout>

      <TextView
          android:id="@+id/dummyContent4"
          android:text="TRAIN"
          android:textSize="17sp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/dummyContent3"
          android:layout_centerHorizontal="true"
          android:fontFamily="@font/mavenprobold"
          android:textColor="@color/green_grapgh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/dummyContent4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:src="@drawable/plan2"
        android:alpha="0.4"
        android:scaleType="fitXY"
        android:background="@color/colorPrimaryDark" />


      <LinearLayout
          android:id="@+id/dummyContent5"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_below="@id/dummyContent4"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="0dp"
          android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:layout_weight="1">

          <ImageView
              android:id="@+id/mobile"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_centerHorizontal="true"
              android:paddingRight="180dp"
              android:scaleType="fitCenter"
              android:src="@drawable/smartphone"
              android:tint="@color/white" />

          <ImageView
              android:id="@+id/smartwatch"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_centerHorizontal="true"
              android:paddingLeft="180dp"
              android:scaleType="fitCenter"
              android:src="@drawable/smartwatch"
              android:tint="@color/white" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/mobile"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/mavenprobold"
              android:paddingRight="180dp"
              android:text="Mobile App"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:textSize="14sp" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/smartwatch"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/mavenprobold"
              android:paddingLeft="180dp"
              android:text="Smart Watch"
              android:textAlignment="center"
              android:textColor="@color/white"
              android:textSize="14sp" />
        </RelativeLayout>

      </LinearLayout>

      <TextView
          android:id="@+id/dummyContent91"
          android:text="ACHIEVE"
          android:textSize="17sp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/dummyContent5"
          android:layout_centerHorizontal="true"
          android:fontFamily="@font/mavenprobold"
          android:textColor="@color/green_grapgh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/dummyContent91"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:src="@drawable/achieve"
        android:alpha="0.4"
        android:scaleType="fitXY"
        android:background="@color/colorPrimaryDark" />


      <LinearLayout
          android:id="@+id/dummyContent6"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_below="@id/dummyContent91"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="0dp"
          android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:layout_weight="1">

          <ImageView
              android:id="@+id/workouts_statics"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:paddingRight="180dp"
              android:scaleType="fitCenter"
              android:src="@drawable/workoutsicon"
              android:tint="@color/white"/>

          <ImageView
              android:id="@+id/progress"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_centerHorizontal="true"
              android:paddingLeft="180dp"
              android:scaleType="fitCenter"
              android:src="@drawable/progressicon"
              android:tint="@color/white"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/workouts_statics"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/mavenprobold"
              android:paddingRight="180dp"
              android:text="Workout Statics"
              android:textAlignment="center"
              android:textColor="@color/white"
              android:textSize="14sp" />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/progress"
              android:layout_centerHorizontal="true"
              android:fontFamily="@font/mavenprobold"
              android:paddingLeft="180dp"
              android:text="Progress"
              android:textAlignment="center"
              android:textColor="@color/white"
              android:textSize="14sp" />
        </RelativeLayout>

      </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
