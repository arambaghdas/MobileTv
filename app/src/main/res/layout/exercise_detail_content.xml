<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:nestedScrollingEnabled="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_yt_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_blue"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yt_btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_youtube" />

            <TextView
                android:id="@+id/noYtLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mavenprobold"
                android:text="No YouTube link available"
                android:textSize="22sp"
                android:visibility="invisible" />

            <FrameLayout
                android:id="@+id/fl_youtube_video"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="visible" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/tv_description_title"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/mavenprobold"
                android:text="FLYS DUMBELL"
                android:textColor="@color/lighter_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_name"
                android:layout_below="@id/tv_name"
                android:fontFamily="@font/mavenprobold"
                android:text="CHEST"
                android:textColor="@color/grey_txt"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_image_exercise"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_category"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/excersise_image_1" />

            <TextView
                android:id="@+id/tv_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_image_exercise"
                android:layout_margin="10dp"
                android:fontFamily="@font/mavenprobold"
                android:maxLines="2"
                android:text="WHAT MUSCLES ARE USED BY FLYES?"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_below="@+id/tv_description_title"
                android:text=""
                android:fontFamily="@font/mavenproregular"
                android:textColor="@color/background_blue"
                android:textSize="16sp" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>