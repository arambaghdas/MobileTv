                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="@string/txt_language_caps"
                    android:textColor="@color/grey_txt"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/sp_languages"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/languagetv"
                    android:layout_marginStart="10dp"
                    android:theme="@style/customSpinner" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/sp_languages"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weightunittv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="@string/txt_weight_unit_caps"
                    android:textColor="@color/grey_txt"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/sp_weight_units"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/weightunittv"
                    android:layout_marginStart="10dp"
                    android:theme="@style/customSpinner" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:text="EMAIL NOTIFICATIONS"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/mavenprobold"
                    android:textColor="@color/grey_text"
                    android:textSize="12sp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/background_blue"
                        android:fontFamily="@font/mavenproregular"
                        android:text="Update Weight Reminders"
                        android:layout_height="match_parent" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:buttonTint="@color/green_grapgh"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/background_blue"
                        android:fontFamily="@font/mavenproregular"
                        android:text="Training Reminders"
                        android:layout_height="match_parent" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:buttonTint="@color/green_grapgh"
                        android:layout_height="match_parent" />


                </LinearLayout>

            </LinearLayout>

