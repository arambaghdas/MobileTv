            <LinearLayout
                android:id="@+id/layoutNothingSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_Sync_Process"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_Sync_Process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Nothing sync"></TextView>

            </LinearLayout>


            <Button
                android:id="@+id/btn_sync_polar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutNothingSync"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_buttonsync"
                android:fontFamily="@font/mavenprobold"
                android:text="SYNC NOW POLAR"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button"
                android:paddingHorizontal="20dp">

                <TextView
                    android:id="@+id/watchsynctv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="WATCH SYNCHRONIZATION"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_watch_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/watchsynctv"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="WATCH NOT CONNECTED"
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lastsynctv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_watch_name"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="LAST SYNC WITH WATCH:"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_last_synced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lastsynctv"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="dd.mm.yy - hh:mm"
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/datetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_last_synced"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="@string/txt_datetime_caps"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/datasynctv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/datetv"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="@string/txt_datasync_caps"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/rl_circle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/datasynctv"
                    android:layout_marginTop="20dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar

                        android:id="@+id/circle1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progressbar_color="@color/dark_blue"
                        app:cpb_progressbar_width="8dp" />

                    <TextView
                        android:id="@+id/circletv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/mavenprobold"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_circle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/datasynctv"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circle2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progressbar_color="@color/dark_blue"
                        app:cpb_progressbar_width="8dp" />

                    <TextView
                        android:id="@+id/circletv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/mavenprobold"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_circle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/datasynctv"
                    android:layout_marginTop="20dp">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circle3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cpb_background_progressbar_width="8dp"
                        app:cpb_progressbar_color="@color/dark_blue"
                        app:cpb_progressbar_width="8dp" />

                    <TextView
                        android:id="@+id/circletv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/mavenprobold"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/imagestv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_circle1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="@string/txt_images_caps"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/exercisestv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_circle2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="@string/txt_exercises_caps"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/workoutstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/rl_circle3"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mavenprobold"
                    android:text="@string/txt_workouts_caps"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_sync_now"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workoutstv"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_buttonsync"
                    android:fontFamily="@font/mavenprobold"
                    android:text="SYNC NOW"
                    android:textAllCaps="true"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>