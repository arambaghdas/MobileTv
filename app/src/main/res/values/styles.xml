<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/lighter_blue</item>
        <item name="android:textColor">@color/lighter_blue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="checkboxTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/lighter_blue</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/lighter_blue</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ThemeOverflow">
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MeterNumberPickerStyle">
        <item name="mnp_min">0</item>
        <item name="mnp_max">9</item>
        <item name="mnp_textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/mavenprobold</item>
        <item name="mnp_textSize">40sp</item>
        <item name="mnp_paddingHorizontal">30dp</item>
        <item name="mnp_paddingVertical">30dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="MeterViewStyle">
        <item name="mv_firstColor">@color/colorAccent</item>
        <item name="mv_numberOfFirst">3</item>
        <item name="mv_numberOfSecond">0</item>
        <item name="mv_pickerStyle">@style/MeterNumberPickerStyle</item>
        <item name="mv_secondColor">@color/lighter_blue</item>
        <item name="mnp_min">100</item>
        <item name="mnp_max">200</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="customSpinner">
        <item name="android:fontFamily">@font/mavenprobold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.CenterAnimation">
        <item name="android:windowBackground">@drawable/ll_face_logo</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/greyblack_text</item>
        <item name="android:textColor">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/greyblack_text</item>
        <item name="colorControlNormal">@color/greyblack_text</item>
        <item name="colorControlActivated">@color/greyblack_text</item>
        <item name="color">@color/greyblack_text</item>
        <item name="android:textColorHighlight">@color/lighter_blue</item>
        <item name="android:textColorLink">@color/greyblack_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>

    <style name="TextLabelother" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/greyblack_text</item>
        <item name="android:textColor">@color/activegreen</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/greyblack_text</item>
        <item name="colorControlNormal">@color/greyblack_text</item>
        <item name="colorControlActivated">@color/greyblack_text</item>
        <item name="color">@color/greyblack_text</item>
        <item name="android:textColorHighlight">@color/lighter_blue</item>
        <item name="android:textColorLink">@color/greyblack_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/mavenprobold</item>

    </style>

    <style name="YourStyleNameFor.NavigationDrawer" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/activegreen</item>
    </style>

</resources>
